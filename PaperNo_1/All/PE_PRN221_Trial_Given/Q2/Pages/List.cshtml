@page
@model Q2.Pages.ListModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Service Manager</h1>
<style>
    .custom-table {
        border-collapse: collapse;
    }

        .custom-table td {
            border: 1px solid #000;
            padding: 8px;
        }
</style>
<form asp-page="List" method="get">
    <table>
        <tr>
            <td>
                Room
            </td>
            <td>
                <input asp-for="Search" name="Search" value="@Model.Search" />
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <button type="submit">Search</button>
            </td>
        </tr>
    </table>
</form>


<h2>List of servies</h2>

<form method="post" enctype="multipart/form-data">
    <input type="file" name="FileInput" asp-for="FileInput" />
    <button type="submit" style="margin-left: 30px;">Import</button>
</form>

<table class="custom-table">
    <tr>
        <td>
            RoomTitle
        </td>
        <td>
            FreeType
        </td>
        <td>
            Month
        </td>
        <td>
            Year
        </td>
        <td>
            Amount
        </td>
        <td>
        </td>
    </tr>
    @foreach (var i in Model.ListService)
    {
        <tr>
            <td>
                @i.RoomTitle
            </td>
            <td>
                @i.FeeType
            </td>
            <td>
                @i.Month
            </td>

            <td>
                @i.Year
            </td>
            <td>
                @i.Amount
            </td>
            @if (i.EmployeeNavigation == null)
            {
                <td>
                    Unpaid
                </td>
            }
            @if (i.EmployeeNavigation != null)
            {
                <td>
                    Sevice has been paid. Employee: @i.EmployeeNavigation.Name
                </td>
            }
        </tr>
    }
</table>